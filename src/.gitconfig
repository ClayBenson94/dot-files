[core]
	editor = vim
	excludesfile = ~/.gitignore
	autocrlf = input
	eol = lf
[help]
	autocorrect = 1
[color]
	ui = true
[push]
	default = current
	autoSetupRemote = true
[alias]
	a = add
	aa = add --all
	s = status -suall
	c = commit
	cm = commit -m
	st = stash -u
	sa = stash apply
	l = !git log --graph --pretty=format:'%C(yellow)%h%Creset -%C(bold red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	pp = !git pull && git push
	hh = reset --hard HEAD
	aacm = !git aa && git cm
	sf = "!f() { git switch $(git branch --list | grep -i \"$1\" | head -n1 | sed 's/^[ *]*//'); }; f"
