# get current branch in git repo
function parse_git_branch() {
	BRANCH=`git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'`
	if [ ! "${BRANCH}" == "" ]
	then
		STAT=`parse_git_dirty`
		echo "[${BRANCH}${STAT}] "
	else
		echo ""
	fi
}

# get current status of git repo
function parse_git_dirty {
	status=`git status 2>&1 | tee`
	untracked=`git ls-files . --exclude-standard --others 2>&1 | wc -l`
	dirty=`echo -n "${status}" | grep "modified:" | wc -l`
	newfile=`echo -n "${status}" | grep "new file:" | wc -l`
	renamed=`echo -n "${status}" | grep "renamed:" | wc -l`
	deleted=`echo -n "${status}" | grep "deleted:" | wc -l`
	bits=''
	if [ ! "${renamed}" == "0" ]; then
		bits="r${renamed}${bits}"
	fi
	if [ ! "${newfile}" == "0" ]; then
		bits="n${newfile}${bits}"
	fi
	if [ ! "${untracked}" == "0" ]; then
		bits="u${untracked}${bits}"
	fi
	if [ ! "${deleted}" == "0" ]; then
		bits="d${deleted}${bits}"
	fi
	if [ ! "${dirty}" == "0" ]; then
		bits="m${dirty}${bits}"
	fi
	if [ ! "${bits}" == "" ]; then
		echo " ${bits}"
	else
		echo ""
	fi
}

