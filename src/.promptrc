green="\e[32m"
blue="\e[34m"
lightred="\e[91m"
lightgreen="\e[92m"
lightyellow="\e[93m"
lightmagenta="\e[95m"
default="\e[39m"

# get current branch in git repo
function parse_git_branch() {
	BRANCH=`git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/'`
	if [ ! "${BRANCH}" == "" ]
	then
		STAT=`parse_git_dirty`
		echo -e "${default}[${green}${BRANCH}${STAT}${default}] "
	else
		echo ""
	fi
}

# get current status of git repo
function parse_git_dirty {
	status=`git status 2>&1 | tee`
	untracked=`git ls-files . --exclude-standard --others 2>&1 | wc -l`
	dirty=`echo -n "${status}" | grep "modified:" | wc -l`
	newfile=`echo -n "${status}" | grep "new file:" | wc -l`
	renamed=`echo -n "${status}" | grep "renamed:" | wc -l`
	deleted=`echo -n "${status}" | grep "deleted:" | wc -l`
	bits=''
	if [ ! "${renamed}" == "0" ]; then
		bits="${lightyellow}r${renamed}${bits}"
	fi
	if [ ! "${newfile}" == "0" ]; then
		bits="${lightgreen}n${newfile}${bits}"
	fi
	if [ ! "${untracked}" == "0" ]; then
		bits="${blue}u${untracked}${bits}"
	fi
	if [ ! "${deleted}" == "0" ]; then
		bits="${lightred}d${deleted}${bits}"
	fi
	if [ ! "${dirty}" == "0" ]; then
		bits="${lightmagenta}m${dirty}${bits}"
	fi
	if [ ! "${bits}" == "" ]; then
		echo -e " ${bits}"
	else
		echo ""
	fi
}

export PS1="\[\e[34m\][\[\e[m\]\[\e[34m\]\t\[\e[m\]\[\e[34m\]]\[\e[m\] \[\e[33m\]\u\[\e[m\]@\[\e[35m\]\h\[\e[m\] \[\e[36m\]\w\[\e[m\] \[\e[32m\]\`parse_git_branch\`\[\e[m\]\n$ "